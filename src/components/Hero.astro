---
import hero_1920 from "../assets/images/hero/hero_1920x1080.webp";
import hero_1080 from "../assets/images/hero/hero_1080x1080.jpg";
import hero_768 from "../assets/images/hero/hero_768x512.webp";
import hero_1536 from "../assets/images/hero/hero_1536x1024.webp";
import hero_320 from "../assets/images/hero/hero_320x480.jpg";
import hero_640 from "../assets/images/hero/hero_640x960.jpg";
import hero_960 from "../assets/images/hero/hero_960x1440.jpg";
---

<picture class="h-full w-full">
  <source
    media="(min-width: 1920px)"
    srcset={hero_1920.src}
    type="image/webp"
  />
  <source
    media="(min-width: 1080px)"
    srcset={hero_1080.src}
    type="image/jpeg"
  />
  <source
    media="(min-width: 768px)"
    srcset={`${hero_768.src} 1x, ${hero_1536.src} 2x`}
    type="image/webp"
  />
  <source
    media="(min-width: 320px)"
    srcset={`${hero_320.src} 1x, ${hero_640.src} 2x, ${hero_960.src} 3x`}
    type="image/jpeg"
  />
  <img src={hero_320.src} alt="hero" class="h-full w-full object-cover object-top" />
</picture>
